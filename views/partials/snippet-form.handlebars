<fieldset>
  <legend>Edit Code Snippet</legend>
 
  <div class="form-group">
    <label for="review-title">Title</label><br>
    <input class="form-control" id="snippet-title" type="text" name="title" value="{{snippet.title}}"/>
  </div>



  <div class="form-group">
    <label for="review-description">Code</label><br>
    <textarea class="form-control" id="code-form" name="description" rows="10" />{{snippet.description}}</textarea>
  </div>

</fieldset>